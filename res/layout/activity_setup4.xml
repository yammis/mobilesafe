<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="40.0dip"
        android:background="#ff6cbd45" >

        <TextView
            style="@style/text_title_style"
            android:text="4.恭喜你,设置完成" />
    </LinearLayout>

    <TextView
        style="@style/text_content_style"
        android:text="强烈建议您开启防盗保护" />

    <LinearLayout
        android:onClick="activeDeviceAdmin"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rt_selector"
        android:clickable="true"
        android:orientation="vertical" >

        <TextView
            style="@style/text_content_style"
            android:text="建议您开启应用程序的超级管理员权限\n" />

        <TextView
            style="@style/text_content_style"
            android:text="@string/tips" />
    </LinearLayout>

    <CheckBox
        android:id="@+id/cb_setup4_status"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="防盗保护没有开启." />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <ImageView style="@style/image_off_style" />

        <ImageView style="@style/image_off_style" />

        <ImageView style="@style/image_off_style" />

        <ImageView style="@style/image_on_style" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center" >

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:scaleType="center"
            android:src="@drawable/phone" />

        <Button
            style="@style/button_next_style"
            android:text="设置完成" />

        <Button style="@style/button_pre_style" />
    </RelativeLayout>

</LinearLayout>