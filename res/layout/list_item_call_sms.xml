<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="48dip"
    android:background="@drawable/main_item_selector" >

    <TextView
        android:id="@+id/tv_call_sms_item_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="3dip"
        android:text="号码"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/tv_call_sms_item_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/tv_call_sms_item_number"
        android:layout_marginLeft="3dip"
        android:layout_marginTop="5dip"
        android:text="拦截模式"
        android:textColor="#88000000" />

    <ImageView
        android:id="@+id/iv_call_sms_item_delete"
        android:layout_width="35dip"
        android:layout_height="35dip"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dip"
        android:src="@drawable/list_item_delete_selector" />

    <ImageView
        android:id="@+id/iv_call_sms_item_edit"
        android:layout_width="40dip"
        android:layout_height="40dip"
     	android:layout_toLeftOf="@id/iv_call_sms_item_delete"
     	android:layout_marginLeft="3dip"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dip"
        android:src="@drawable/edit" />

</RelativeLayout>